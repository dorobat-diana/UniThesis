<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookNestApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- !!!!Warnning  for devises older than api31 you will get error-->
        <item
            name="android:windowSplashScreenBackground"
            tools:targetApi="31">@color/splash_screen_background</item>
    </style>

    <style name="Theme.BookNestApp" parent="Base.Theme.BookNestApp" >

        <!-- Background -->
        <item name="android:windowBackground">@color/burn_red</item>

        <!-- App bar color -->
        <item name="colorSurface">@color/citric</item>

        <!-- Button color -->
        <item name="colorAccent">@color/citric</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/sand_storm</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/citric</item>

        <!-- For Material 3 -->
        <item name="android:colorPrimaryDark">@color/citric</item>
        <!-- Fix focus color for TextInputLayout -->
        <item name="colorControlActivated">@color/sand_storm</item>
        <item name="colorControlNormal">@color/sand_storm</item>
        <item name="colorControlHighlight">@color/sand_storm</item>

    </style>
</resources>