<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookNestApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BookNestApp" parent="Base.Theme.BookNestApp" >

        <!-- Background -->
        <item name="android:windowBackground">@color/yellow</item>

        <!-- App bar color -->
        <item name="colorSurface">@color/cinammon</item>

        <!-- Button color -->
        <item name="colorAccent">@color/caramel</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/sand_storm</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/caramel</item>

        <!-- For Material 3 -->
        <item name="android:colorPrimaryDark">@color/caramel</item>
        <!-- Fix focus color for TextInputLayout -->
        <item name="colorControlActivated">@color/cinammon</item>
        <item name="colorControlNormal">@color/cinammon</item>
        <item name="colorControlHighlight">@color/cinammon</item>

    </style>
